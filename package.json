{
  "name": "harmonicon",
  "private": true,
  "workspaces": [
    "packages/compose",
    "packages/core",
    "packages/driver-audio-tone",
    "packages/driver-midi-web",
    "packages/driver-storage-localstorage",
    "packages/jsdoc-template",
    "packages/library-core",
    "packages/util",
    "packages/web",
    "packages/web-components"
  ],
  "scripts": {
    "build": "yarn build:components && yarn build:web",
    "build:components": "yarn workspace @composer/web-components run build",
    "build:web": "yarn workspace @composer/web run build",
    "export": "yarn workspace @composer/web run export",
    "dev": "npx lerna run dev --parallel",
    "doc": "npx lerna run doc --parallel",
    "test": "npx lerna run test --parallel"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "dependencies": {
    "react-icons": "^4.3.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
